<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Local Camera Preview -->
    <live.hms.videoview.HMSVideoView
        android:id="@+id/videoViewLocal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Dark gradient overlay at top -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:paddingVertical="14dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- LIVE badge -->
        <TextView
            android:id="@+id/tvLiveBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  LIVE  "
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#E94560"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- HLS URL label -->
        <TextView
            android:id="@+id/tvHlsUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HLS URL: ---"
            android:textSize="11sp"
            android:textColor="#00D2FF"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/tvLiveBadge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Dark gradient overlay at bottom -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llBottomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BB000000"
        android:paddingVertical="20dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row of buttons -->
        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Audio Mute -->
            <Button
                android:id="@+id/btnMuteAudio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_grey"
                android:text="Audio"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="6dp" />

            <!-- Video Mute -->
            <Button
                android:id="@+id/btnMuteVideo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_grey"
                android:text="Video"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp" />

            <!-- HLS Start/Stop -->
            <Button
                android:id="@+id/btnHLS"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_red"
                android:text="HLS"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp" />

            <!-- RTMP Start/Stop -->
            <Button
                android:id="@+id/btnRTMP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_purple"
                android:text="RTMP"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp" />

            <!-- Leave -->
            <Button
                android:id="@+id/btnLeave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_dark_red"
                android:text="Leave"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>