<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional Cropper"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnPickGallery"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Pick from Gallery"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnTakeCamera"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Take Photo"
            android:layout_marginTop="12dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnPreview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Preview Cropped Image"
            android:layout_marginTop="20dp"
            android:backgroundTint="?attr/colorSecondary"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A1A2E"
            android:paddingHorizontal="28dp">

            <!-- Logo / Icon -->
            <TextView
                android:id="@+id/tvIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#x1F3A5;"
                android:textSize="56sp"
                android:layout_marginTop="72dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1.0" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live Streaming"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Powered by 100ms"
                android:textSize="14sp"
                android:textColor="#E94560"
                android:gravity="center"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTitles"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Room Code Label -->
            <TextView
                android:id="@+id/tvRoomCodeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Code"
                android:textSize="13sp"
                android:textColor="#AAAAAA"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Room Code EditText -->
            <EditText
                android:id="@+id/etRoomCode"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/input_bg"
                android:hint="Enter Room Code"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:inputType="text"
                android:importantForAutofill="no"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRoomCodeLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Go Live Button -->
            <Button
                android:id="@+id/btnGoLive"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/btn_red"
                android:text="Go Live"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/etRoomCode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Watch Button -->
            <Button
                android:id="@+id/btnWatch"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/btn_blue"
                android:text="Watch Stream"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/btnGoLive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Info text -->
            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go Live = Broadcaster (stream bhejne wala)&#10;Watch = Viewer (stream dekhne wala via HLS)"
                android:textSize="13sp"
                android:textColor="#777777"
                android:gravity="center"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/btnWatch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</FrameLayout>
