<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#000000">

    <!-- ExoPlayer view (HLS play karega) -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="true"
        android:visibility="gone" />

    <!-- Loading screen (jab tak stream na aaye) -->
    <LinearLayout
        android:id="@+id/llLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="true"
            android:progressTint="#E94560" />

        <TextView
            android:id="@+id/tvLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stream ka wait kar raha hai..."
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <!-- LIVE badge (stream chalne pe dikhega) -->
    <TextView
        android:id="@+id/tvLiveBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  LIVE  "
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#E94560"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Leave button -->
    <Button
        android:id="@+id/btnLeave"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:background="@drawable/btn_dark_red"
        android:text="Leave"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>